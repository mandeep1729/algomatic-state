# Frontend Environment Variables
# Copy this file to .env.local for local development overrides
# For Vercel: Set these in Project Settings > Environment Variables

# =============================================================================
# API Configuration
# =============================================================================

# Backend API base URL
# - For local development: Leave empty (uses Vite proxy to localhost:8729)
# - For Vercel/production: Set to your backend URL (e.g., https://api.yourdomain.com)
VITE_API_URL=

# Backend API port for local development Vite proxy
# Only used when VITE_API_URL is not set
# Default: 8729
VITE_API_PORT=8729

# =============================================================================
# Authentication
# =============================================================================

# Google OAuth Client ID
# Get yours from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# =============================================================================
# Development Options
# =============================================================================

# Use mock data instead of real API calls
# Set to "true" to enable mocks (useful when backend is not available)
VITE_USE_MOCKS=false
