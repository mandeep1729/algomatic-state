# Algomatic State - Environment Configuration
# Copy this file to .env and fill in your values
# cp .env.example .env

# =============================================================================
# ALPACA API CREDENTIALS
# Get your keys from: https://app.alpaca.markets/paper/dashboard/overview
# =============================================================================
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here
ALPACA_PAPER=true

# =============================================================================
# FINNHUB API CREDENTIALS
# Get your key from: https://finnhub.io/dashboard
# =============================================================================
FINNHUB_API_KEY=your_finnhub_api_key_here

# =============================================================================
SNAPTRADE_CLIENT_ID=your_client_id
SNAPTRADE_CONSUMER_KEY=your_consumer_key
# =============================================================================

# =============================================================================
# ENVIRONMENT
# Options: development, paper, production
# =============================================================================
ENVIRONMENT=development

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# DATA PATHS (optional - defaults work fine)
# =============================================================================
# DATA_CACHE_DIR=data/cache
# DATA_RAW_DIR=data/raw

# =============================================================================
# STRATEGY PARAMETERS (optional - can also use config/trading.yaml)
# =============================================================================
# STRATEGY_LONG_THRESHOLD=0.001
# STRATEGY_SHORT_THRESHOLD=-0.001
# STRATEGY_ENABLE_REGIME_FILTER=true
# STRATEGY_ENABLE_PATTERN_MATCHING=true

# =============================================================================
# BACKTEST PARAMETERS (optional)
# =============================================================================
# BACKTEST_INITIAL_CAPITAL=100000.0
# BACKTEST_COMMISSION_PER_SHARE=0.005
# BACKTEST_SLIPPAGE_BPS=5.0

# =============================================================================
# DATABASE CONFIGURATION
# PostgreSQL connection settings for storing market data
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=algomatic
DB_USER=algomatic
DB_PASSWORD=algomatic_dev
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# =============================================================================
# PGADMIN (optional - for database management UI)
# Start with: docker-compose --profile tools up
# =============================================================================
# PGADMIN_EMAIL=admin@algomatic.local
# PGADMIN_PASSWORD=admin

# =============================================================================
# MOMENTUM AGENT (optional)
# =============================================================================
# AGENT_SYMBOL=AAPL
# AGENT_INTERVAL_MINUTES=15
# AGENT_DATA_PROVIDER=alpaca
# AGENT_LOOKBACK_DAYS=5
# AGENT_POSITION_SIZE_DOLLARS=10000
# AGENT_PAPER=true
